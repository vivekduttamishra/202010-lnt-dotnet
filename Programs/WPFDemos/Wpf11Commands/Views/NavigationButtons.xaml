<UserControl x:Class="Wpf11Commands.Views.NavigationButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf11Commands.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <UniformGrid Rows="1">
        <Button Background="Black" Foreground="White" Width="80" Margin="5" Content="First"    Command="{Binding NavigateFirst}"/>
        <Button Background="Black" Foreground="White" Width="80" Margin="5" Content="Previous" Command="{Binding NavigatePrevious}"/>
        <Button Background="Black" Foreground="White" Width="80" Margin="5" Content="Next"     Command="{Binding NavigateNext}"/>
        <Button Background="Black" Foreground="White" Width="80" Margin="5" Content="Last"     Command="{Binding NavigateLast}"/>
    </UniformGrid>
</UserControl>
