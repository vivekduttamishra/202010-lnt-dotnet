<UserControl x:Class="Wpf11Commands.Views.ToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf11Commands.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <WrapPanel DockPanel.Dock="Right"  HorizontalAlignment="Right"    >
        <Button Command="New" Content="+" FontSize="18" Background="CornflowerBlue" Height="40" Width="40" Margin="5"/>
        <Button Command="Help"
                    Content="?" FontSize="18" Background="CornflowerBlue" Height="40" Width="40" Margin="5"/>
        <Button Command="ApplicationCommands.Close" Content="X" FontSize="18" Background="Red" Height="40" Width="40" Margin="5"/>
    </WrapPanel>
</UserControl>
