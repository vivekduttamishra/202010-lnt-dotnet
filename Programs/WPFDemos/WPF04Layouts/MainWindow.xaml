        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF04Layouts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel Margin="10">

        <Button Click="ShowStackPanelDemo" Margin="10" >Stack and Wrap Panel</Button>
        
        <Button Click="ShowUniformGridDemo" Margin="10" >Uniform Grid Layout</Button>
        
        <Button Click="ShowDockPanelDemo" Margin="10" >Dock Panel</Button>
        
        <Button Margin="10" >Canvas</Button>
        
        <Button Margin="10" >Grid</Button>        
        
    </StackPanel>
